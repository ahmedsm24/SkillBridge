# SkillBridge Backend Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Set to "true" to use MongoDB, "false" for SQLite (default)
USE_MONGODB=true

# MongoDB Connection (required if USE_MONGODB=true)
# Option 1: Full connection URI (recommended for MongoDB Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/skillbridge?retryWrites=true&w=majority

# Option 2: Individual connection parameters (for local MongoDB)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=skillbridge
MONGODB_USERNAME=
MONGODB_PASSWORD=

# SQLite fallback (used if USE_MONGODB=false)
DATABASE_URL=sqlite:///./resume_training.db

# =============================================================================
# API KEYS
# =============================================================================

# OpenAI API Key (required for AI-powered features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# SECURITY
# =============================================================================

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# JWT Algorithm
ALGORITHM=HS256

# Access token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# FILE STORAGE
# =============================================================================

# Maximum upload size in bytes (default: 10MB)
MAX_UPLOAD_SIZE=10485760

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host and port
HOST=0.0.0.0
PORT=8000

# Environment (development, staging, production)
ENVIRONMENT=development

